{
  "id": "redact-password-in-body",
  "name": "Redact Password Values in Body",
  "description": "Redact password values in key=value pairs within log body",
  "priority": 95,
  "enabled": true,
  "log_transform": {
    "matchers": [
      {
        "log_body": {
          "regex": "password="
        }
      }
    ],
    "field": {
      "log_body": {}
    },
    "replacement": {
      "pattern": "(password=)[^&\\s]+",
      "replacement": "${1}[REDACTED]"
    }
  }
}
