{
  "id": "redact-credit-card",
  "name": "Redact Credit Card Numbers",
  "description": "Mask credit card numbers in log body, keeping last 4 digits",
  "priority": 100,
  "enabled": true,
  "log_transform": {
    "matchers": [
      {
        "log_body": {
          "regex": "\\b[0-9]{12,16}\\b"
        }
      }
    ],
    "field": {
      "log_body": {}
    },
    "replacement": {
      "pattern": "\\b[0-9]{12}([0-9]{4})\\b",
      "replacement": "************$1"
    }
  }
}
